{
    "version": 2,
    "functions": {
        "app.py": {
            "runtime": "python3.9",
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "routes": [
        { "src": "/(.*)", "dest": "app.py" }
    ],
    "ignoreFiles": [
        "venv/",
        "__pycache__/",
        "*.pyc",
        "node_modules/",
        ".git/",
        "large_files/"
    ]
}
